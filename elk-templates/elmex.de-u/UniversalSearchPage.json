PUT /_application/search_application/sa-elmex.de-u
{
  "indices": ["search-elmex.de-u"],
  "template": {
    "script": {
      "lang": "mustache",
      "source": """
{
  "query": {
    {{#match_phrase_prefix}}
    "match_phrase_prefix": {
      "{{field}}": {
        "query": "{{query_string}}",
        "slop": "{{slop}}"
      }
    }
    {{/match_phrase_prefix}}

    {{#bool_query}}
    "bool": {
      "must": [
        {{#must_queries}}
        {
          "match": {
            "{{field}}": "{{value}}"
          }
        }
        {{^isLast}},{{/isLast}}
        {{/must_queries}}
        
        {{#multi_match}}
        {
          "multi_match": {
            "query": "{{query_string}}",
            "fields": {{#toJson}}input_fields{{/toJson}},
            "operator": "or"
          }
        }
        {{/multi_match}}
      ],
      "filter": [
        {{#filters}}
        {
          "term": {
            "{{key}}": "{{value}}"
          }
        }
        {{^isLast}},{{/isLast}}
        {{/filters}}
      ]
    }
    {{/bool_query}}
  },
  "_source": {{#toJson}}output_fields{{/toJson}},

  {{#sort_field}}
  "sort": [
    {
      "{{sort_field}}": {
        "order": "{{sort_order}}"
      }
    }
  ],
  {{/sort_field}}

  {{#highlight}}
  "highlight": {
    "fields": {{#toJson}}highlight_fields{{/toJson}}
  },
  {{/highlight}}

  {{#from}}
    "from": "{{from}}",
  {{/from}}
  "size": "{{size}}"
}
"""
    }
  }
}
